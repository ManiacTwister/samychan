<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>SamyChan</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="description" content="Avalon Admin Theme">
    <meta name="author" content="Michael Mezger">

    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,700' rel='stylesheet' type='text/css'>

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    {% stylesheets '@MMSamyEditorBundle/Resources/scss/styles.scss' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/3cfcc339e89/api/fnReloadAjax.js"></script>
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    {% javascripts '@MMSamyEditorBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
<body>
    {% include 'MMSamyEditorBundle:Layout:header.html.twig' %}
    {% block raw %}{% endblock %}
    <div class="layout">
        {% block sidebar %}

        {% endblock %}
        <div class="content">
            {% for type in ['success', 'error', 'notice'] %}
                {% for flashMessage in app.session.flashbag.get(type) %}
                    <div data-alert class="alert-box {{ type }} radius">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                {% endfor %}
            {% endfor %}
            {% block content %}

            {% endblock %}
        </div>
    </div>
    <script>
        $(document).foundation();
    </script>
</body>
</html>
